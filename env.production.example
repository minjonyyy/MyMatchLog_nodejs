# Production Environment Variables Template
# 실제 값은 GitHub Secrets에서 관리됩니다.

NODE_ENV=production

# Database Configuration (AWS RDS)
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=3306
DB_NAME=mymatchlog_production
DB_USER=admin
DB_PASSWORD=your-secure-password

# Redis Configuration (AWS ElastiCache)
REDIS_HOST=your-elasticache-endpoint.region.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration
ACCESS_TOKEN_SECRET_KEY=your-production-access-token-secret-key
REFRESH_TOKEN_SECRET_KEY=your-production-refresh-token-secret-key
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# AWS S3 Configuration
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_REGION=ap-northeast-2
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# Server Configuration
PORT=3000

# EC2 Configuration (for deployment)
EC2_HOST=your-ec2-public-ip
EC2_USERNAME=ec2-user
EC2_KEY_NAME=mymatchlog-key 